---
import StartButton from './start-button.astro';
import Tray from './tray.astro';
import Task from './task.astro'
---

<div class="taskbar">
    <StartButton />
    <Task />
    <span class="taskbar-gap"></span>
    <Tray />
</div>

<style>
    .taskbar {
        display: flex;
        position: absolute;
        background-color: #bfbfbf;
        bottom: 0;
        width: 100%;
        height: 28px;
        align-items: center;
        border-top: 1px solid whitesmoke;
    }

    .taskbar-gap {
        flex-grow: 1;
    }
</style>