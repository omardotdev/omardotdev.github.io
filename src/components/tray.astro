---
import window_icon from '../assets/window.png'
import speaker_icon from '../assets/speaker.png'
---

<div class="tray">
    <img src={window_icon.src}>
    <img src={speaker_icon.src}>
    <span class="clock" id="clock">...</span>
</div>

<script src="../js/clock.js"></script>
<style>
    .tray {
        display: flex;
        background-color: #bfbfbf;
        padding: 8px;
        width: 83px;
        height: 5px;
        text-align: center;
        align-items: center;
        border-top: 1px solid grey;
        border-left: 1px solid grey;
        border-right: 1px solid white;
        border-bottom: 1px solid white;
        margin-right: 2px;
    }

    .tray .clock {
        padding-left: 10px;
    }
</style>